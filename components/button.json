{
  "button": {
    "primary":{
      "#normal":{
        "background":"@theme-button-primary-normal",
        "text": "@theme-text-primary-inverted",
        "border": "none"
      },
      "#hovered":{
        "background":"@theme-button-primary-hover",
        "text": "@theme-text-primary-inverted"
      },
      "#pressed":{
        "background":"@theme-button-primary-pressed",
        "text": "@theme-text-primary-inverted"
      },
      "#disabled":{
        "background":"@theme-button-primary-disabled",
        "text": "@theme-text-primary-disabled"
      }
    },
    "secondary":{
      "#normal":{
        "background":"@theme-button-secondary-normal",
        "text": "@theme-text-primary-normal",
        "border": "@theme-outline-button-normal"
      },
      "#hovered":{
        "background":"@theme-button-secondary-hover",
        "text": "@theme-text-primary-normal",
        "border": "@theme-outline-button-normal"
      },
      "#pressed":{
        "background":"@theme-button-secondary-pressed",
        "text": "@theme-text-primary-normal",
        "border": "@theme-outline-button-normal"
      },
      "#disabled":{
        "background":"@theme-button-secondary-normal",
        "text": "@theme-text-primary-disabled",
        "border": "@theme-outline-disabled-normal"
      }
    },
    "ghost":{
      "#normal":{
        "background":"@theme-button-secondary-normal",
        "text": "@theme-text-primary-normal",
        "border": "none"
      },
      "#hovered":{
        "background":"@theme-button-secondary-hover",
        "text": "@theme-text-primary-normal"
      },
      "#pressed":{
        "background":"@theme-button-secondary-pressed",
        "text": "@theme-text-primary-normal"
      },
      "#disabled":{
        "background":"@theme-button-primary-disabled",
        "text": "@theme-text-primary-disabled"
      }
    },
    "cancel-ghost":{
      "#normal":{
        "background":"@theme-button-secondary-normal",
        "text": "@theme-text-error-normal"
      },
      "#hovered":{
        "background":"@theme-button-secondary-hover",
        "text": "@theme-text-error-normal"
      },
      "#pressed":{
        "background":"@theme-button-secondary-pressed",
        "text": "@theme-text-error-normal"
      },
      "#disabled":{
        "background":"@theme-button-primary-disabled",
        "text": "@theme-text-primary-disabled"
      }
    },
    "message-ghost":{
      "#normal":{
        "background":"@theme-button-secondary-normal",
        "text": "@theme-text-accent-normal"
      },
      "#hovered":{
        "background":"@theme-button-secondary-hover",
        "text": "@theme-text-accent-normal"
      },
      "#pressed":{
        "background":"@theme-button-secondary-pressed",
        "text": "@theme-text-accent-normal"
      },
      "#disabled":{
        "background":"@theme-button-primary-disabled",
        "text": "@theme-text-primary-disabled"
      }
    },
    "join-fill":{
      "#normal":{
        "background":"@theme-button-join-normal",
        "text": "@theme-text-button-normal",
        "border": "none"
      },
      "#hovered":{
        "background":"@theme-button-join-hover",
        "text": "@theme-text-button-normal"
      },
      "#pressed":{
        "background":"@theme-button-join-pressed",
        "text": "@theme-text-button-normal"
      },
      "#disabled":{
        "background":"@theme-button-primary-disabled",
        "text": "@theme-text-primary-disabled"
      }      
    },
    "join-outline":{
      "#normal":{
        "background":"@theme-button-secondary-normal",
        "text": "@theme-text-success-normal",
        "border": "@theme-outline-join-normal"
      },
      "#hovered":{
        "background":"@theme-button-join-hover",
        "text": "@theme-text-button-normal",
        "border": "none"
      },
      "#pressed":{
        "background":"@theme-button-join-pressed",
        "text": "@theme-text-button-normal",
        "border": "none"
      },
      "#disabled":{
        "background":"@theme-button-secondary-normal",
        "text": "@theme-text-primary-disabled",
        "border": "@theme-outline-disabled-normal"
      }
    },
    "cancel-fill":{
      "#normal":{
        "background":"@theme-button-cancel-normal",
        "text": "@theme-text-button-normal",
        "border": "none"
      },
      "#hovered":{
        "background":"@theme-button-cancel-hover",
        "text": "@theme-text-button-normal"
      },
      "#pressed":{
        "background":"@theme-button-cancel-pressed",
        "text": "@theme-text-button-normal"
      },
      "#disabled":{
        "background":"@theme-button-primary-disabled",
        "text": "@theme-text-primary-disabled"
      }
    },
    "cancel-outline":{
      "#normal":{
        "background":"@theme-button-secondary-normal",
        "text": "@theme-text-error-normal",
        "border": "@theme-outline-cancel-normal"
      },
      "#hovered":{
        "background":"@theme-button-cancel-hover",
        "text": "@theme-text-button-normal",
        "border": "none"
      },
      "#pressed":{
        "background":"@theme-button-cancel-pressed",
        "text": "@theme-text-button-normal",
        "border": "none"
      },
      "#disabled":{
        "background":"@theme-button-secondary-normal",
        "text": "@theme-text-primary-disabled",
        "border": "@theme-outline-disabled-normal"
      }
    },
    "message-fill":{
      "#normal":{
        "background":"@theme-button-accent-normal",
        "text": "@theme-text-button-normal",
        "border": "none"
      },
      "#hovered":{
        "background":"@theme-button-accent-hover",
        "text": "@theme-text-button-normal"
      },
      "#pressed":{
        "background":"@theme-button-accent-pressed",
        "text": "@theme-text-button-normal"
      },
      "#disabled":{
        "background":"@theme-button-primary-disabled",
        "text": "@theme-text-primary-disabled"
      }
    },
    "counter":{
      "#normal":{
        "background":"@theme-button-primary-normal",
        "text": "@theme-text-primary-inverted",
        "border": "none"
      },
      "#hovered":{
        "background":"@theme-button-primary-hover",
        "text": "@theme-text-primary-inverted"
      },
      "#pressed":{
        "background":"@theme-button-primary-pressed",
        "text": "@theme-text-primary-inverted"
      }
    },
    "dialpad":{
      "#normal":{
        "background":"@theme-button-secondary-normal",
        "text":{
          "number":"@theme-text-primary-normal",
          "characters":"@theme-text-secondary-normal"
        },
        "border": "none"
      },
      "#hovered":{
        "background":"@theme-button-secondary-hover",
        "text":{
          "number":"@theme-text-primary-normal",
          "characters":"@theme-text-secondary-normal"
        }
      },
      "#pressed":{
        "background":"@theme-button-secondary-pressed",
        "text":{
          "number":"@theme-text-primary-normal",
          "characters":"@theme-text-secondary-normal"
        }
      },
      "#disabled":{
        "background":"@theme-button-secondary-normal",
        "text":{
          "number":"@theme-text-primary-disabled",
          "characters":"@theme-text-primary-disabled"
        }
      },
      "special":{
        "background":"@theme-button-secondary-normal",
        "text":{
          "number":"@theme-text-primary-normal",
          "characters":"@theme-text-secondary-normal"
        }
      }

    },
    "hyperlink": {
      "#normal": {
        "background": "@theme-button-secondary-normal",
        "text": "@theme-text-accent-normal",
        "border": "none"
      },
      "#hovered": {
        "text": "@theme-text-accent-hover"
      },
      "#pressed": {
        "text": "@theme-text-accent-hover"
      },
      "#focused": {
        "text": "@theme-text-accent-normal",
        "border": "@theme-text-accent-normal"
      },
      "#disabled": {
        "text": "@theme-text-primary-disabled"
      }
    }
  }
}

